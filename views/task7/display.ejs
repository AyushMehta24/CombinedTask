    <style>
      body
      {
        display: flex;
        flex-direction: column;
        gap: 30PX;
        align-items: center;

      }
            table {
              border-collapse: collapse;
              text-align: center;
              display: flex;
              justify-content: center;
            }
        
            td,
            th {
              border: 1px solid black;
              padding: 15px;
            }

            div{
              display: flex;
              gap: 50px;
              justify-content: center;
              align-items: center ;
              margin: 20px 0;
               }

            button
            {
              width: 200px;
              height: 50px;
            }
            
            a{
              font-size: 20PX;
              text-decoration: none;
            }
           
            p
            {
              font-size: 20PX;
            }
