
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Time Zone Converter</title>

</head>

<body>
    <h2>Ayush Mehta (24DEV067)</h2>
        <div class="bahar">
            <form name="form" class="form">
                <div class="content">
                    Year:<input type="text" name="year"  class="time double">
                    Month:<input type="text" name="month" class="time">
                    Date:<input type="text" name="date"  class="time">
                    Hour:<input type="text" name="hour"  class="time">
                    Minute:<input type="text" name="minute" class="time">
                    Second:<input type="text" name="second"  class="time">
                </div>
                <div class="bahar">
                    <div class="content">
                        To:<select name="fromTime" id="toTime">
                            <option value="asia/kolkata">Asia kolkata</option>
                            <option value="asia/dhaka">Asia Dhaka</option>
                            <option value="asia/tokyo">Asia Tokyo</option>
                            <option value="pacific/pago_pago">Pacific Pago_Pago</option>
                            <option value="pacific/honolulu">Pacific/Honolulu</option>
                            <option value="america/newyork">America/Anchorage</option>
                            <option value="africa/lagos">Africa Lagos</option>
                            <option value="europe/berlin">Europe Berlin</option>
                            <option value="europe/paris">Europe Paris</option>
                        </select>
                        <p id="output2"></p>
                    </div>
                </div>
        </div>
        </form>
        <div>
            <button id="submit">Submit</button>
        </div>

    <script>
        var date = new Date();
        var form = document.forms['form'];
        function timeZone() {
            var date = new Date();
            date.setFullYear(form['year'].value);
            date.setMonth(form['month'].value - 1);
            date.setDate(form['date'].value);
            date.setHours(form['hour'].value);
            date.setMinutes(form['minute'].value);
            date.setSeconds(form['second'].value);
            const t2 = document.getElementById('toTime').value;
            output = date.toLocaleString("en-US", {
                timeZone: t2
            });
            document.getElementById('output2').innerText = output;
        }
        const submit = document.getElementById('submit');
        submit.addEventListener('click', async () => {
            timeZone();
        });
    </script>
</body>

</html>